{% for child in children %}
  <url>
    <loc>{{ base_url }}{{ child["name"] }}</loc>
    <lastmod>{{ child["last_modified"] }}</lastmod>
    <changefreq>monthly</changefreq>
  </url>
  {% if child["children"]|length > 0 %}
    {% with children=child["children"]%}
      {% include "sitemap_children.xml" %}
    {% endwith %}
  {% endif %}
{% endfor %}